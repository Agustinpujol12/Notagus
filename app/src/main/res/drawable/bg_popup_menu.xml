<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
<!-- Blanco tipo “tarjeta” -->
<solid android:color="#FFFFFFFF"/>

<!-- Esquinas más redondas (28dp) -->
<corners android:radius="48dp"/>

<!-- Sutileza: borde muy suave para separar del scrim -->
<stroke android:width="1dp" android:color="#14000000"/>
<!-- Un poco de padding para que el contenido no pegue en el borde -->
<padding android:left="12dp" android:top="12dp"
    android:right="12dp" android:bottom="12dp"/>
</shape>
