<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">

    <!-- Contenedor del diálogo (cuerpo que podés tintar desde Java) -->
    <LinearLayout
        android:id="@+id/dialogCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:background="@drawable/bg_dialog_settings_surface"
        android:clipToOutline="true"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Header (tinte desde Java con cols.header) -->
        <RelativeLayout
            android:id="@+id/settingsHeaderBar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/tvSettingsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Configuración"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="?attr/colorOnSurface"/>
        </RelativeLayout>

        <!-- Divider -->
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:dividerInsetStart="0dp"
            app:dividerInsetEnd="0dp"/>

        <!-- Body -->
        <LinearLayout
            android:id="@+id/settingsBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Sección: Tema -->
            <TextView
                android:id="@+id/tvSectionTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tema"
                android:textSize="18sp"
                android:textColor="?attr/colorOnSurface"/>

            <LinearLayout
                android:id="@+id/rowTema"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp">

                <!-- Caja 50/50 system -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardThemeSystem"
                    android:layout_width="88dp"
                    android:layout_height="72dp"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardUseCompatPadding="true"
                    app:cardPreventCornerOverlap="true"
                    app:strokeWidth="1dp"
                    app:strokeColor="@android:color/darker_gray">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="#F4A950"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="#FAE9D2"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Caja 50/50 dark -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardThemeDark"
                    android:layout_width="88dp"
                    android:layout_height="72dp"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardUseCompatPadding="true"
                    app:cardPreventCornerOverlap="true"
                    app:strokeWidth="1dp"
                    app:strokeColor="@android:color/darker_gray">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="#202126"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="#292C33"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Caja 50/50 light/pink -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardThemePink"
                    android:layout_width="88dp"
                    android:layout_height="72dp"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardUseCompatPadding="true"
                    app:cardPreventCornerOverlap="true"
                    app:strokeWidth="1dp"
                    app:strokeColor="@android:color/darker_gray">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="#F9E6EE"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="#FFF7FA"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Divider -->
            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                app:dividerInsetStart="0dp"
                app:dividerInsetEnd="0dp"/>

            <!-- Sección: Fuente -->
            <TextView
                android:id="@+id/tvSectionFont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Fuente"
                android:textSize="18sp"
                android:textColor="?attr/colorOnSurface" />

            <LinearLayout
                android:id="@+id/rowFuente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp">

                <!-- Fuente Sans (Poppins) -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardFontA"
                    android:layout_width="88dp"
                    android:layout_height="72dp"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="#FAE9D2"
                    app:strokeWidth="1dp"
                    app:strokeColor="@android:color/darker_gray">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Aa"
                        android:textSize="26sp"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="#222222"
                        android:includeFontPadding="false"/>
                </com.google.android.material.card.MaterialCardView>

                <!-- Fuente Cursive (Dancing Script) -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardFontB"
                    android:layout_width="88dp"
                    android:layout_height="72dp"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="#FAE9D2"
                    app:strokeWidth="1dp"
                    app:strokeColor="@android:color/darker_gray">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Aa"
                        android:textSize="26sp"
                        android:fontFamily="@font/playfairdisplay_regular"
                        android:textColor="#222222"
                        android:includeFontPadding="false"/>
                </com.google.android.material.card.MaterialCardView>

                <!-- Fuente Serif (Playfair Display) -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardFontC"
                    android:layout_width="88dp"
                    android:layout_height="72dp"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="#FAE9D2"
                    app:strokeWidth="1dp"
                    app:strokeColor="@android:color/darker_gray">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Aa"
                        android:textSize="26sp"
                        android:fontFamily="@font/dancingscript_regular"
                        android:textColor="#222222"
                        android:includeFontPadding="false"/>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Divider -->
            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="6dp"
                app:dividerInsetStart="0dp"
                app:dividerInsetEnd="0dp"/>

            <!-- Bloque switches (sin título de sección) -->
            <LinearLayout
                android:id="@+id/rowPrivacidadOrganizacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="4dp">

                <!-- Bloquear con huella -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="0dp">

                    <TextView
                        android:id="@+id/tvBiometricLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Mostrar solo tareas del día"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface" />

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switchBiometric"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:useMaterialThemeColors="true" />
                </LinearLayout>

                <!-- Divider fino -->
                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="6dp"
                    app:dividerInsetStart="0dp"
                    app:dividerInsetEnd="0dp" />

                <!-- Recibir notificaciones -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="0dp">

                    <TextView
                        android:id="@+id/tvAutoArchiveLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Recibir notificaciones"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface" />

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switchAutoArchive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:useMaterialThemeColors="true" />
                </LinearLayout>

                <!-- Divider fino -->
                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="6dp"
                    app:dividerInsetStart="0dp"
                    app:dividerInsetEnd="0dp" />

                <!-- NUEVA ACCIÓN: Eliminar tareas pasadas -->
                <LinearLayout
                    android:id="@+id/rowDeletePastTasks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="0dp">

                    <TextView
                        android:id="@+id/tvDeletePastTasksLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Eliminar tareas pasadas"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface" />

                    <!-- Botón de tacho: un pelín más a la izquierda -->
                    <ImageButton
                        android:id="@+id/btnDeletePastTasks"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="6dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_delete_24"
                        android:contentDescription="Eliminar tareas pasadas"
                        app:tint="@color/delete_red_soft" />
                </LinearLayout>
            </LinearLayout>

            <!-- Divider -->
            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="6dp"
                app:dividerInsetStart="0dp"
                app:dividerInsetEnd="0dp"/>


            <!-- Botonera centrada -->
            <LinearLayout
                android:id="@+id/rowActions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingTop="12dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCancelar"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="125dp"
                    android:layout_height="40dp"
                    android:text="CANCELAR" />

                <Space
                    android:layout_width="12dp"
                    android:layout_height="0dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAplicar"
                    android:layout_width="125dp"
                    android:layout_height="40dp"
                    android:text="APLICAR" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
