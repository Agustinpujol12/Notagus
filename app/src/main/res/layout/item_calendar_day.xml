<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dayRoot"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_marginVertical="6dp"
    android:layout_weight="1">

    <!-- círculo “hoy” -->
    <View
        android:id="@+id/bgToday"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_day_today"
        android:visibility="gone"/>

    <!-- número -->
    <TextView
        android:id="@+id/tvDayNumber"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="8"
        android:textSize="16sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        android:includeFontPadding="false"/>

    <!-- dot tareas ÚNICO DÍA -->
    <View
        android:id="@+id/dotTask"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="14dp"
    android:background="@drawable/shape_circle_dot"
    android:visibility="gone"/>

    <!-- mini tilde PERMANENTES -->
    <TextView
        android:id="@+id/tvMiniTick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="2dp"
        android:text="✓"
        android:textSize="10sp"
        android:textStyle="bold"
        android:includeFontPadding="false"
    android:visibility="gone"/>
</FrameLayout>
