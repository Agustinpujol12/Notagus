<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Triángulo marcador -->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgCornerPin"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/tri_corner_pinned"
        android:contentDescription="@string/pinned_marker"
        android:visibility="gone"
        android:layout_gravity="start|top"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"/>

    <!-- Contenedor vertical -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ====== BLOQUE CAMBIADO: Overlay para el puntito ====== -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- PUNTO superpuesto (no empuja nada) -->
            <ImageView
                android:id="@+id/ivOneDayDot"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="2dp"
                android:src="@drawable/bg_dot_circle"
                android:visibility="gone"/>

            <!-- Fila principal (igual que antes) -->
            <LinearLayout
                android:id="@+id/rowMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="8dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">

                <CheckBox
                    android:id="@+id/cbDone"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_width="28dp"
                    android:layout_height="28dp" />

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/text_on_content"
                    android:textSize="24sp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    tools:text="Tarea" />

                <!-- Título EDITABLE -->
                <EditText
                    android:id="@+id/etTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:background="@android:color/transparent"
                    android:textColor="@color/text_on_content"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:hint="Nombre de la tarea"
                    android:visibility="gone"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:imeOptions="actionDone"
                    android:inputType="textCapSentences|text"
                    tools:text="Tarea (editando)"/>

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btnExpand"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/expandir"
                    android:src="@drawable/ic_chevron_down"
                    android:visibility="gone" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btnMore"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/more_options"
                    android:textColor="@color/text_on_content"
                    app:srcCompat="@drawable/ic_more_vert_24" />
            </LinearLayout>
        </FrameLayout>
        <!-- ====== FIN BLOQUE CAMBIADO ====== -->

        <!-- Subtareas -->
        <LinearLayout
            android:id="@+id/containerSubtasks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="56dp"
            android:paddingEnd="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/listSubtasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <TextView
                android:id="@+id/tvAddSubtask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="+ Añadir subtarea..."
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray" />

            <LinearLayout
                android:id="@+id/rowNewSubtask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone">

                <EditText
                    android:id="@+id/etNewSubtask"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Escribí el nombre..."
                    android:maxLines="1"
                    android:imeOptions="actionDone"
                    android:inputType="textCapSentences"
                    android:textSize="14sp"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />

                <ImageButton
                    android:id="@+id/btnSaveSubtask"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Guardar"
                    app:srcCompat="@drawable/ic_check_24"
                    app:tint="@color/ok_green"/>

                <ImageButton
                    android:id="@+id/btnCancelSubtask"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Cancelar"
                    app:srcCompat="@drawable/ic_close_24"
                    app:tint="@color/delete_red" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
