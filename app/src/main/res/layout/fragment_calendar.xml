<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/calendarRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".calendar.CalendarFragment">

    <!-- HEADER -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="152dp"
        android:background="@color/fondo_header"
        android:paddingBottom="8dp"
        android:elevation="8dp"
        android:translationZ="8dp">

        <!-- Rueda arriba-izquierda -->

        <!-- Flecha AYER, anclada ABAJO -->

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnSettings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="4dp"
            android:adjustViewBounds="true"
            android:background="?attr/selectableItemBackgroundBorderless"

            android:contentDescription="@string/app_name"
            android:padding="0dp"
            android:scaleType="fitCenter"

            android:tint="@color/menu_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_settings" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnAyer"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/ayer"
            android:tint="@color/menu_text"
            app:srcCompat="@drawable/ic_chevron_left"

            android:padding="0dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="28dp"/>


        <!-- Fecha centrada en 2 líneas -->
        <TextView
            android:id="@+id/tvFecha"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:maxLines="2"
            android:minLines="2"
            android:includeFontPadding="false"
            android:lineSpacingExtra="2dp"
            android:textAlignment="center"
            android:textColor="#222222"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/btnAyer"
            app:layout_constraintEnd_toStartOf="@id/btnManana"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constrainedWidth="true"
            tools:text="Martes\n9 de septiembre"/>

        <!-- Flecha MAÑANA, anclada ABAJO -->
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnManana"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/manana"
            android:tint="@color/menu_text"
            app:srcCompat="@drawable/ic_chevron_right"

            android:padding="0dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="28dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- CONTENIDO -->
    <LinearLayout
        android:id="@+id/calendarContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_marginTop="36dp">

        <!-- Barra de mes con columnas 7× (alineadas a días) -->
        <LinearLayout
            android:id="@+id/monthBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="4dp"
            android:paddingBottom="8dp"
            android:weightSum="7">

            <!-- Título ocupa 5/7 (Lun a Vie) -->
            <TextView
                android:id="@+id/tvMonthTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="?attr/colorOnSurface"
                tools:text="septiembre de 2025"/>

            <!-- Flecha PREV en columna 6 (sobre Sábado) -->
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnPrevMonth"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/previous"
                android:tint="?attr/colorOnSurface"
                app:srcCompat="@drawable/ic_chevron_up"
                android:padding="0dp"/>

            <!-- Flecha NEXT en columna 7 (sobre Domingo) -->
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnNextMonth"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/next"
                android:tint="?attr/colorOnSurface"
                app:srcCompat="@drawable/ic_chevron_down"
                android:padding="0dp"/>
        </LinearLayout>

        <!-- Encabezado: semana LUN → DOM -->
        <LinearLayout
            android:id="@+id/weekHeaderRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView style="@style/Calendar.WeekHeader" android:text="@string/lun_corto"/>
            <TextView style="@style/Calendar.WeekHeader" android:text="@string/mar_corto"/>
            <TextView style="@style/Calendar.WeekHeader" android:text="@string/mie_corto"/>
            <TextView style="@style/Calendar.WeekHeader" android:text="@string/jue_corto"/>
            <TextView style="@style/Calendar.WeekHeader" android:text="@string/vie_corto"/>
            <TextView style="@style/Calendar.WeekHeader" android:text="@string/sab_corto"/>
            <TextView style="@style/Calendar.WeekHeader" android:text="@string/dom_corto"/>
        </LinearLayout>

        <!-- Grilla 7x6 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCalendar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:overScrollMode="never"
            android:clipToPadding="false"/>
    </LinearLayout>
</LinearLayout>
