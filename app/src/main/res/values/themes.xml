<resources>
    <!-- Tema base (sin fuente fija) -->
    <style name="Base.Theme.Notagus" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/fondo_header</item>
        <item name="colorSurface">@color/fondo_general</item>
        <item name="android:colorBackground">@color/fondo_general</item>
        <item name="colorError">@color/delete_red</item>
        <item name="colorOnError">@android:color/white</item>

        <!-- Ajustes varios que ya tenías -->
        <item name="colorOnSurface">@android:color/black</item>
        <item name="colorControlNormal">@android:color/black</item>
    </style>

    <!-- Variantes por FUENTE -->
    <style name="Theme.Notagus.FontA" parent="Base.Theme.Notagus">
        <!-- Poppins -->
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="Theme.Notagus.FontB" parent="Base.Theme.Notagus">
        <!-- Playfair Display -->
        <item name="android:fontFamily">@font/playfairdisplay_regular</item>
    </style>

    <style name="Theme.Notagus.FontC" parent="Base.Theme.Notagus">
        <!-- Dancing Script -->
        <item name="android:fontFamily">@font/dancingscript_regular</item>
    </style>

    <!-- Alias si lo necesitás en algún lado -->
    <style name="Theme.Notagus" parent="Theme.Notagus.FontA"/>
</resources>
