<!-- res/values/styles.xml -->
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Quita el “pill/oval” permanente del item seleccionado en BottomNav -->
    <style name="BottomNav_NoActiveIndicator">
        <!-- ¡Ojo! Usá 'color' sin el prefijo android: -->
        <item name="color">@android:color/transparent</item>
        <item name="android:width">0dp</item>
        <item name="android:height">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <!-- Texto del BottomNavigationView: compacto y sin padding extra.
         Usa Material3; si no tenés M3, abajo hay un fallback. -->
    <style name="BottomNav.Text" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textSize">12sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Fallback si tu proyecto no usa Material3:
         (solo definilo/aplicalo si te da error el de arriba) -->
    <style name="BottomNav.Text.MDC" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Estilo para los encabezados de la semana (DO, LU, MA...) -->
    <style name="Calendar.WeekHeader">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <!-- Alias: si algún layout usa @style/Calendar, redirige a Calendar.WeekHeader -->
    <style name="Calendar" parent="@style/Calendar.WeekHeader" tools:ignore="ResourceCycle" />

</resources>
